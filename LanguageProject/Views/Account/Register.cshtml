
@using LanguageProject.Models

@model StudentRegisterViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";

}

 

<!-- LOGIN -->
<section id="login-content" class="login-content">
    <div class="awe-parallax bg-login-content"></div>
    <div class="awe-overlay"></div>
    <div class="container">
        <div class="row">



            <!-- FORM -->
            <div class="col-lg-4 pull-right">
                <div class="form-login">
                    @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { }))
                    {
                        @Html.AntiForgeryToken()
                        <h2 class="text-uppercase">Sign up</h2>
                        <div class="form-fullname">
                            @Html.TextBoxFor( m=>m.FName, new { @class = "first-name",@placeholder="First name"})
                            @Html.TextBoxFor(m => m.LName, new { @class = "last-name", @placeholder = "Last name" })
                           
                        </div>
                        
                        <div class="form-email">
                            @Html.TextBoxFor(m => m.Email, new { @placeholder = "Email" })
                            
                        </div>
                       
                        <div class="form-password">
                            @Html.PasswordFor(m => m.Password, new { @placeholder = "Password" })
                          
                        </div>
                        <div class="form-password">
                            @Html.PasswordFor(m => m.ConfirmPassword, new { @placeholder = "Confirm Password" })

                        </div>
                        
                        @Html.ValidationSummary("", new { @class = "text-danger" })
                        <div class="form-submit-1">
                            <input type="submit" value="Become a member" class="mc-btn btn-style-1">
                        </div>
                        <div class="link">
                            <a href="@Url.Action("Login")">
                                <i class="icon md-arrow-right"></i>Already have account ? Log in
                            </a>
                        </div>

                    }
                    
                </div>
            </div>
            <!-- END / FORM -->

            <div class="image">
                <img src="images/homeslider/img-thumb.png" alt="">
            </div>

        </div>
    </div>
</section>
<!-- END / LOGIN -->
