@{
    Layout = "~/Views/Shared/_Layout.cshtml";

}

    <!-- FEATURED REQUEST TEACHER -->
<section id="featured-request-teacher" class="featured-request-teacher section">
    <div class="awe-parallax bg-featured-request-teacher"></div>
    <div class="awe-overlay overlay-color-1"></div>
    <div class="container">
        <div class="row">
            <div class="col-md-5">
                <div class="request-form">
                    <h2>Start Creating Your Course</h2>
                    <form>
                        <div class="form-item">
                            <input type="text" placeholder="Course Title ( 60 characers limit )">
                        </div>
                        <div class="form-question mc-select">
                            <select class="select">
                                <option value="">Category</option>
                                <option value="">Category</option>
                            </select>
                        </div>
                        <div class="form-submit-1">
                            <input type="submit" value="Create Course" class="mc-btn btn-style-1">
                        </div>
                    </form>
                    <div>
                        <form id="tutorInfo" method="POST" action="">
                            <div class="final-block final-block-1">
                                <div class="sign-up-block">
                                    <input type="checkbox" value="checked" name="termschecktutor" id="register_tutor" class="required terms_policy" aria-required="true">
                                    <label for="register_tutor"></label>
                                </div>
                            </div>
                            <div class="full-width2">
                                <input type="text" class="required" placeholder="First Name" name="firstname" aria-required="true"> <i class="fa fa-user" aria-hidden="true"></i>
                            </div>
                            <div class="full-width2">
                                <input type="text" class="required" placeholder="Last Name" name="lastname" aria-required="true"><i class="fa fa-user" aria-hidden="true"></i>
                            </div>
                            <div class="full-width2">
                                <input type="text" class="required email" placeholder="Email" name="email" aria-required="true">
                                <i class="fa fa-envelope" aria-hidden="true"></i>
                            </div>
                            <div class="full-width2">
                                <input type="password" class="required tutor-passw" placeholder="Password" name="password" aria-required="true">
                                <i class="fa fa-unlock-alt" aria-hidden="true"></i>
                            </div>
                            <div class="full-width2">
                                <input type="password" class="required" placeholder="Confirm Password" equalto=".tutor-passw" name="password_confirm" aria-required="true">
                                <i class="fa fa-unlock-alt" aria-hidden="true"></i>
                            </div>
                            <div class="full-width2">
                                <div class="select-area2">
                                </div>
                            </div>
                            <button type="submit" class="modal-btns submit-info">
                                Submit
                                <i class="fa fa-share-square-o" aria-hidden="true"></i>
                            </button>
                        </form>
                    </div>
                </div>
            </div>

            <div class="col-md-7">
                <div class="request-featured">
                    <h1 class="big">Create Course on Langexchange is<br> SUPER EASY</h1>
                    <div class="create-course-info-wrap">
                        <div class="row">
                            <div class="col-md-4">
                                <div class="create-course-info">
                                    <span class="count">1</span>
                                    <p>Fill Basic Information</p>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="create-course-info">
                                    <span class="count">2</span>
                                    <p>Design course and Asset</p>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="create-course-info">
                                    <span class="count">3</span>
                                    <p>Public and Share</p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="second-featured">
                        <div class="mc-count-item">
                            <h4>Courses</h4>
                            <p><span class="countup">2536,556</span></p>
                        </div>
                        <div class="mc-count-item">
                            <h4>Teachers</h4>
                            <p><span class="countup">10,389</span></p>
                        </div>
                        <div class="mc-count-item">
                            <h4>Students</h4>
                            <p><span class="countup">34,177</span></p>
                        </div>
                        <div class="mc-count-item">
                            <h4>Tuition Paid</h4>
                            <p>$ <span class="countup">793,361,890</span></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- END / FEATURED REQUEST TEACHER -->